---
interface Props {
  src: string;
  alt: string;
  className?: string;
}

const { src, alt, className } = Astro.props;

const currentImage = src.startsWith("http") ? src : `/images/products/${src}`;
---

<img
  src={currentImage}
  alt={alt}
  class:list={[
    "rounded-md border border-gray-200 shadow-sm w-20 h-20 object-cover",
    className,
  ]}
/>
